# Board
CONFIG_BOARD_XIAOMI_RENOIR=y

# Display
CONFIG_DRM_SDE_EXPO=y

# Fingerprint
CONFIG_FINGERPRINT_FPC_TEE=m

# Haptics
CONFIG_INPUT_QCOM_HV_HAPTICS=m

# Pinctrl
CONFIG_PINCTRL_RENOIR=y

# Power supply
CONFIG_BQ2597X=y
CONFIG_RENOIR_FOR_BUILD=y

# Touchscreen
CONFIG_TOUCHSCREEN_FOCALTECH_3658U=m
CONFIG_TOUCHSCREEN_GOODIX_BRL=m
CONFIG_TOUCHSCREEN_GOODIX_TS_GESTURE=m
CONFIG_TOUCHSCREEN_GOODIX_TS_TOOLS=m
CONFIG_TOUCHSCREEN_QGKI_GOODIX=y
CONFIG_TOUCHSCREEN_XIAOMI_TOUCHFEATURE=m

# WiFi
CONFIG_CNSS_QCA6490=y
